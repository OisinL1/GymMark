<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  
  <tbody>
    {{#each users}}
      <tr>
        <td>{{this.firstName}}</td>
        <td>{{this.lastName}}</td>
        <td>{{this.email}}</td>
        <td>
          {{#unless this.isAdmin}}
            <a href="/admin/users/promote/{{this._id}}" class="button">Promote to Admin</a>
          {{/unless}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
